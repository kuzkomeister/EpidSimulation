<Window x:Class="EpidSimulation.ConfigDiseaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpidSimulation"
        mc:Ignorable="d"
        Title="Настройки болезни" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="331*"/>
            <ColumnDefinition Width="69*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Дальше" Command="{Binding bNextPage_Click}" HorizontalAlignment="Left" Margin="456,374,0,0" VerticalAlignment="Top"/>
        <Button Content="Назад" Command="{Binding bPreviousPage_Click}" HorizontalAlignment="Left" Margin="382,374,0,0" VerticalAlignment="Top"/>
        <Frame 
            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden"
            Opacity="{Binding FrameOpacity}" d:IsHidden="True"
            />
        <Button IsCancel="True" Content="Отмена" HorizontalAlignment="Center" Margin="0,374,0,0" VerticalAlignment="Top"/>
        <Button IsDefault="True" Content="Подтвердить" HorizontalAlignment="Left" Margin="531,374,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
